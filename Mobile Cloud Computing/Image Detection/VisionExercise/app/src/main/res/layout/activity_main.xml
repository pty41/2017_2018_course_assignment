<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/face_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.shan_kuan.visionexercise.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="67dp"
        android:paddingTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/btnPickPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="PICK PHOTO" />

        <ImageView
            android:id="@+id/imgBarcode"
            android:layout_width="238dp"
            android:layout_height="263dp"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:minHeight="200dp"
            android:minWidth="200dp"
            app:srcCompat="@mipmap/ic_launcher" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="180dp"
        android:paddingTop="380dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txtNumPeople1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persons:"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />
        <TextView

            android:id="@+id/txtBarcode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcodes:"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="140dp"
        android:paddingTop="380dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txtNumPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />
        <TextView

            android:id="@+id/txtBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
